{
  "kind": "collectionType",
  "collectionName": "ingredients",
  "info": {
    "singularName": "ingredient",
    "pluralName": "ingredients",
    "displayName": "Ingredient",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "unique": true
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "ingredients"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "halal",
        "haram",
        "unknown",
        "disputed"
      ]
    },
    "source": {
      "type": "enumeration",
      "enum": [
        "plant",
        "animal",
        "synthetic"
      ]
    },
    "explanation": {
      "type": "text"
    },
    "verification": {
      "type": "richtext"
    }
  }
}
